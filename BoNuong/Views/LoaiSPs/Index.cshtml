@model PagedList.PagedList<BoNuong.Models.LoaiSP>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h2 style=" margin-top:20px;">Danh sách loại sản phẩm</h2>
            <a class="btn btn-success" href='@Url.Action("Create", "LoaiSPs")' style="margin:10px 0px;">
                Tạo loại sản phẩm
            </a>
            <table class="table table-bordered table-dark">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Tên loại sản phẩm
                        </th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody class="table-light">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="col-lg-9">
                                @Html.DisplayFor(modelItem => item.TenLoai)
                            </td>
                            <td class="col-lg-3">
                                @Html.ActionLink("Sửa", "Edit", new { id = item.MaLoai }, new { @class = "btn btn-info" }) |
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaLoai }, new { @class = "btn btn-warning" }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = item.MaLoai }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div style=" margin-bottom:50px;">
                <div>
                    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                </div>
                <div class="MenuTrang">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
                </div>
            </div>
        </div>
    </main>
</div>
