@using BoNuong.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="page-preloader">
    <div class="spinner">
        <div class="rect1"></div>
        <div class="rect2"></div>
        <div class="rect3"></div>
        <div class="rect4"></div>
        <div class="rect5"></div>
    </div>
</div>
@*//** Banner**//*@
<section id="home">
    <div class="container">
        <div class="row">
            @*Introduction*@
            <div class="col-md-6 caption">
                <h1>Chào mừng bạn đến với Bò Nướng Vỉa Hè</h1>
                <h2>
                    Dữ liệu cá nhân của bạn sẽ được sử dụng để
                    <span class="animated-text"></span>
                    <span class="typed-cursor"></span>
                </h2>
                <p>
                    Ăn là
                    <strong style="color: aquamarine"> Mê </strong>
                    !
                </p>
                @*<a href="#" class="btn btn-transparent">Get Started</a>
                    <a class="btn btn-blue popup-youtube" href="https://www.youtube.com/watch?v=Q8TXgCzxEnw">
                        <i class="material-icons">play_circle_filled</i>Watch Video
                    </a>*@
            </div>
            @*Sign Up*@
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", @style = "width:500px" }))
            {
                @Html.AntiForgeryToken()
                <div class="col-md-offset-1">
                    <div class="signup-form">
                        <h2 class="text-center">Đăng nhập</h2>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger", @style = "font-size: 14px;" })
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @style = "height:50px" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu", @style = "height:50px" })
                        </div>
                        @*<div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>*@
                        <div class="form-group">
                            <input type="submit" class="btn btn-blue btn-block" value="Đăng nhập" style="background-color: #44c5ee;" />
                        </div>
                        <div class="text-center">
                            @Html.ActionLink("Đăng ký tài khoản", "Register", routeValues: null, htmlAttributes: new { @class = "btn-outline-info", @style = "margin-top:10px; font-size: 12px; text-decoration:none;" })
                        </div>
                    </div>
                </div>
            }
            <div class="col-md-offset-1" style=";width:500px;margin-left:52%;">
                <section id="socialLoginForm">
                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                </section>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}