<!-- Hero Section Begin body-->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="hero__item set-bg" data-setbg="/Content/img/hero/banner.jpg">
                    <div class="hero__text">
                        <span>Bò Nướng Vỉa Hè</span>
                        <h2>Bò nướng <br />100% tự nhiên</h2>
                        <p>Nhận và giao hàng miễn phí có sẵn</p>
                        <a href="/Account/Register" class="primary-btn">Đến shop ngay</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="categories__item set-bg" data-setbg="/Content/images/daidien/nuong.jpg">
                    <h5><a href="#">Món Nướng</a></h5>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="categories__item set-bg" data-setbg="/Content/images/daidien/lau.jpg">
                    <h5><a href="#">Món Lẩu</a></h5>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="categories__item set-bg" data-setbg="/Content/images/daidien/thittuoi.jpg">
                    <h5><a href="#">Thịt tươi</a></h5>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="categories__item set-bg" data-setbg="/Content/images/daidien/monkhac.jpg">
                    <h5><a href="#">Món Khác</a></h5>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured" style="margin-top: 75px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Các món nướng</h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            <div class="categories__slider owl-carousel">
                @foreach (var item in Model)
                {
                    if (@item.MaLoai == 1)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                            <div class="featured__item">
                                <div class="featured__item__pic set-bg" data-setbg="@item.Hinh">
                                    <ul class="featured__item__pic__hover">
                                        <li>
                                            <a href="@Url.Action("ThemGioHang", "GioHang", new { @id = item.MaSP, @strURL = Request.Url.ToString() })"><i class="fa fa-shopping-cart"></i></a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="featured__item__text">
                                    <h6><a href="#">@item.Ten</a></h6>
                                    <h5>@String.Format("{0:0,0}", @item.Gia)</h5>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>
